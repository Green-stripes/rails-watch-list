<div class="container">
  <h1>My Lists</h1>


  <div class= "tiles d-flex row row-cols-1 row-cols-md-3 g-4">
    <% @lists.each do |list| %>
      <div class="col">
        <div class="card" style="width: 18rem;">
          <div class="card-img-top"> <%= cl_image_tag list.photo.key, :transformation=>[{:fetch_format=>:auto}] %> </div>
          <div class="card-body">
            <p class="card-text"><%= link_to list.name, list_path(list)  %> </p>
            <p><%= link_to "Add a new bookmark to this list", new_list_bookmark_path(list)  %> </p>
            <p><%= link_to "X", list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <hr>

  <h1>Create a new list:</h1>

  <%= simple_form_for(@list) do |f|%>
  <%= f.input :name %>
  <%= f.file_field :photo %>
  <%= f.submit %>
  <% end %>

</div>
